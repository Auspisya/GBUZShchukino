<Page x:Class="GBUZhilishnikKuncevo.Pages.CounterHistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      xmlns:local="clr-namespace:GBUZhilishnikKuncevo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Показания Счётчика">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center">
            <Button Name="BtnBack"
                    Click="BtnBack_Click"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Content="Назад"
                    Foreground="#0850A4"
                    FontSize="20"
                    Margin="5, 5, 5, 5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" Cursor="Hand"/>
            <StackPanel Orientation="Horizontal">
                <GroupBox Style="{StaticResource MaterialDesignHeaderedContentControl}"
                          Header="Номер счётчика:"
                          FontSize="20"
                          Margin="5">
                    <TextBlock Name="TxbCounterNumber"
                             Width="250"
                             VerticalAlignment="Top"/>
                </GroupBox>
                <GroupBox Style="{StaticResource MaterialDesignHeaderedContentControl}"
                          Header="Тип счётчика:"
                          FontSize="20"
                          Margin="5">
                    <TextBlock Name="TxbCounterType"
                             Width="500"
                             VerticalAlignment="Top"/>
                </GroupBox>
            </StackPanel>
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="340" >
                <lvc:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="None" HorizontalAlignment="Stretch" Height="340"  >
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Показания" LabelFormatter="{Binding YFormatter}"></lvc:Axis>
                    </lvc:CartesianChart.AxisY>
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Title="Месяц" Labels="{Binding Labels}"></lvc:Axis>
                    </lvc:CartesianChart.AxisX>
                </lvc:CartesianChart>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
