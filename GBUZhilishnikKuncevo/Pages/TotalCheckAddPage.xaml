<Page x:Class="GBUZhilishnikKuncevo.Pages.Resources.TotalCheckAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GBUZhilishnikKuncevo.Pages.Resources"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавление полной ежемесячной оплаты за все услуги">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Stretch">
            <Button Name="BtnBack"
                    Click="BtnBack_Click"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Content="Назад"
                    Foreground="#0850A4"
                    FontSize="20"
                    Margin="5, 5, 5, 5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" Cursor="Hand"/>
            <Grid Background="White" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <GroupBox Style="{StaticResource MaterialDesignHeaderedContentControl}"
                          Grid.Row ="0" Grid.Column="0"
                          Header="ЛС плательщика:"
                          FontSize="20"
                          Margin="5">
                    <ComboBox Name="CmbBankBook"
                              HorizontalAlignment="Stretch"
                              IsTextSearchEnabled="True"
                              IsEditable="True"/>
                </GroupBox>
                <GroupBox Style="{StaticResource MaterialDesignHeaderedContentControl}"
                          Grid.Row ="0" Grid.Column="1"
                          Header="Льгота:"
                          FontSize="20"
                          Margin="5">
                    <ComboBox Name="CmbBenefit"
                              HorizontalAlignment="Stretch"
                              IsTextSearchEnabled="True"
                              IsEditable="True"/>
                </GroupBox>
                <GroupBox Style="{StaticResource MaterialDesignHeaderedContentControl}"
                          Grid.Row ="0" Grid.Column="2"
                          Header="Статус оплаты:"
                          FontSize="20"
                          Margin="5">
                    <ComboBox Name="CmbPaymentState"
                              HorizontalAlignment="Stretch"
                              IsTextSearchEnabled="True"
                              IsEditable="True"/>
                </GroupBox>
            </Grid>
            <Grid Background="White" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <GroupBox Style="{StaticResource MaterialDesignHeaderedContentControl}"
                          Grid.Row ="0" Grid.Column="0"
                          Header="Оплатить к:"
                          FontSize="20"
                          Margin="5">
                    <DatePicker Name="DPRequiredPaymentDate"
                                HorizontalAlignment="Stretch"
                                BorderBrush="#FF0850A4"/>
                </GroupBox>
                <GroupBox Style="{StaticResource MaterialDesignHeaderedContentControl}"
                          Grid.Row ="0" Grid.Column="1"
                          Header="Оплачено:"
                          FontSize="20"
                          Margin="5">
                    <DatePicker Name="DPPaymentDate"
                                HorizontalAlignment="Stretch"
                                BorderBrush="#FF0850A4"/>
                </GroupBox>
            </Grid>
            <Button Name="BtnAdd"
                    Click="BtnAdd_Click"
                    Content="Добавить"
                    Foreground="#0850A4"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Style="{StaticResource MaterialDesignFlatButton}" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>
